@model List<VinylRecordsApp.Models.Domain.Vinyl>
  

<h1>Vinyl Records</h1>

<form asp-action="Index" method="get" class="mt-5">
    <label>Search by Description</label>
    <div class="input-group mt-3">
        <input type="text" name="SearchString" class="form-control rounded" placeholder="Search" aria-label="Search"
               value="@ViewData["CurrentFilter"]" />
         <input type="submit" value="Search" class="btn btn-dark" />
    </div>
</form>
<a asp-action="Index">Back to full List</a>

<table class="table mt-5">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Label</th>
            <th>Price</th>
            <th> <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSort"]">Release Date</a></th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Label</td>
                <td>@item.Price</td>
                <td>@item.ReleaseDate.ToString("dd-MM-yyyy")</td>
                <td>@item.Description</td>
                <td><a href="Vinyl/View/@item.Id" class="btn btn-info">View</a></td>
            </tr>
        }
    </tbody>
</table>